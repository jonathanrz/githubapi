<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RowLayout"
    android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		style="@style/PrimaryText"
		android:id="@+id/row_language_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		style="@style/Static"
		android:id="@+id/row_language_projects_count_static"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/number_of_projects"
		android:layout_below="@id/row_language_name"
		android:layout_alignParentBottom="true"/>

	<TextView
		style="@style/SecondaryText"
		android:id="@+id/row_language_projects_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/row_language_projects_count_static"
		android:layout_below="@id/row_language_name"
		android:layout_marginStart="5dp"/>

</RelativeLayout>